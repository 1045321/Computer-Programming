m1 = float(input("What is the first mass of the object?: "))
m2 = float(input("What is the second mass of the object?: "))
r = float(input("What is the distance between the centre of the masses of the objects?: "))
G = float(input("Universal gravitational constant: 6.673*10**-11 "))

from math import pow

square = int(pow(r,2))

f = (G*m1*m2)/(r*square)

print("The gravitational force of the object is: ",round(f,2),"N")
